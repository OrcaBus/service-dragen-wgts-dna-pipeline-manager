{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$defs": {
    "detailType": {
      "type": "string",
      "enum": ["WorkflowRunStateChange"]
    },
    "status": {
      "type": "string",
      "enum": ["DRAFT"]
    },
    "timestamp": {
      "pattern": "[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}Z"
    },
    "workflowName": {
      "type": "string",
      "enum": ["dragen-wgts-dna"]
    },
    "workflowVersion": {
      "pattern": "[0-9]+\\.[0-9]+\\.[0-9]+(?:--*)?"
    },
    "portalRunId": {
      "pattern": "[0-9]{8}[0-9a-f]{8}"
    },
    "libraryObject": {
      "type": "object",
      "properties": {
        "libraryId": {
          "type": "string"
        },
        "orcabusId": {
          "type": "string"
        }
      },
      "required": ["libraryId", "orcabusId"]
    },
    "s3Uri": {
      "pattern": "^s3://[a-zA-Z0-9_-]*/[a-zA-Z0-9_/-]*"
    }
  },
  "type": "object",
  "properties": {
    "EventBusName": {
      "type": "string"
    },
    "Source": {
      "type": "string"
    },
    "DetailType": {
      "type": "string",
      "allOf": [
        {
          "$ref": "#/$defs/detailType"
        }
      ]
    },
    "Detail": {
      "type": "object",
      "properties": {
        "status": {
          "type": "string",
          "allOf": [
            {
              "$ref": "#/$defs/status"
            }
          ]
        },
        "timestamp": {
          "type": "string",
          "allOf": [
            {
              "$ref": "#/$defs/timestamp"
            }
          ]
        },
        "workflowName": {
          "type": "string",
          "allOf": [
            {
              "$ref": "#/$defs/workflowName"
            }
          ]
        },
        "workflowVersion": {
          "type": "string",
          "allOf": [
            {
              "$ref": "#/$defs/workflowVersion"
            }
          ]
        },
        "workflowRunName": {
          "type": "string"
        },
        "portalRunId": {
          "type": "string",
          "allOf": [
            {
              "$ref": "#/$defs/portalRunId"
            }
          ]
        },
        "linkedLibraries": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/libraryObject"
          }
        },
        "payload": {
          "type": "object",
          "properties": {
            "version": {
              "type": "string"
            },
            "data": {
              "type": "object",
              "properties": {
                "inputs": {
                  "type": "object",
                  "properties": {
                    "alignmentOptions": {
                      "type": "object",
                      "allowAdditionalProperties": true
                    },
                    "targetedCallerOptions": {
                      "type": "object",
                      "allowAdditionalProperties": true
                    },
                    "snvVariantCallerOptions": {
                      "type": "object",
                      "allowAdditionalProperties": true
                    }
                  },
                  "required": [],
                  "allowAdditionalProperties": true
                },
                "tags": {
                  "type": "object",
                  "properties": {
                    "libraryId": {
                      "type": "string"
                    },
                    "tumorLibraryId": {
                      "type": "string"
                    },
                    "fastqRgidList": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "tumorFastqRgidList": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "subjectId": {
                      "type": "string"
                    },
                    "individualId": {
                      "type": "string"
                    }
                  },
                  "required": ["libraryId"]
                },
                "engineParameters": {
                  "type": "object",
                  "properties": {
                    "projectId": {
                      "type": "string"
                    },
                    "pipelineId": {
                      "type": "string"
                    },
                    "outputUri": {
                      "type": "string",
                      "allOf": [
                        {
                          "$ref": "#/$defs/s3Uri"
                        }
                      ]
                    },
                    "logsUri": {
                      "type": "string",
                      "allOf": [
                        {
                          "$ref": "#/$defs/s3Uri"
                        }
                      ]
                    }
                  },
                  "allowAdditionalProperties": true
                }
              },
              "required": ["inputs", "tags"]
            }
          },
          "required": ["version", "data"]
        }
      },
      "required": [
        "status",
        "timestamp",
        "workflowName",
        "workflowVersion",
        "workflowRunName",
        "portalRunId",
        "linkedLibraries",
        "payload"
      ]
    }
  },
  "required": ["EventBusName", "Source", "DetailType", "Detail"]
}
